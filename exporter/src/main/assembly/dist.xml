<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>lib/**</include>
				<include>${project.artifactId}-${project.version}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>operatorNameMap.xml</include>
				<include>exporter.properties</include>
				<include>ReadMe.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources</directory>
			<outputDirectory>/default</outputDirectory>
			<includes>
				<include>exporter.default.properties</include>
			</includes>
		</fileSet>
				<fileSet>
			<directory>${basedir}/key</directory>
			<outputDirectory>/key</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>